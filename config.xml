<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/2.9.0"
        id        = "org.vedaproject.mobile"
        versionCode="03" 
        version   = "2.9.0">

    <!-- versionCode is optional and Android only -->

    <name>Veda Project Mobile</name>

    <description>The Veda Project Mobile App</description>

    <author href="http://www.zenfactory.org" email="hshirani@zenfactory.org">zenfactory.org</author>

	<preference name="Orientation" value="landscape" />
	<preference name="splashscreen", "splash" />
	<preference name="splashScreenDelay", 10000 />
	<gap:splash src="images/splash-screen.png" />
	<splash src="images/splash-screen.png" />
	<icon src="images/platform-icons/96.png" />
	<icon src="images/platform-icons/36.png" gap:platform="android" gap:density="ldpi" />
	<icon src="images/platform-icons/48.png" gap:platform="android" gap:density="mdpi" />
	<icon src="images/platform-icons/72.png" gap:platform="android" gap:density="hdpi" />
	<icon src="images/platform-icons/96.png" gap:platform="android" gap:density="xhdpi" />

</widget>
